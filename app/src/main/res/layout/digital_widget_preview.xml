<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/digital_widget_preview_widget_width"
    android:layout_height="@dimen/digital_widget_preview_widget_height"
    android:background="@drawable/digital_stadium_background"
    android:backgroundTint="?android:colorBackground"
    android:clipToOutline="true"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/digital_widget_preview_padding">

    <TextClock
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:format12Hour="@string/abbrev_wday_month_day_no_year_preview"
        android:format24Hour="@string/abbrev_wday_month_day_no_year_preview"
        android:gravity="center|top"
        android:singleLine="true"
        android:textSize="@dimen/digital_widget_preview_label_font_size" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/digital_widget_preview_clock_margin"
        android:layout_marginBottom="@dimen/digital_widget_preview_clock_margin"
        android:ellipsize="none"
        android:format12Hour="@string/lock_screen_12_hour_format"
        android:format24Hour="@string/lock_screen_24_hour_format"
        android:singleLine="true"
        android:textSize="@dimen/digital_widget_preview_clock_font_size" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top">

        <ImageView
            android:layout_width="@dimen/digital_widget_preview_label_font_size"
            android:layout_height="@dimen/digital_widget_preview_label_font_size"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/digital_widget_preview_alarm_icon_margin"
            android:importantForAccessibility="no"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_tab_alarm_white_24dp"
            android:tint="@color/appwidget_label_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="none"
            android:singleLine="true"
            android:text="@string/digital_widgets_preview_alarm"
            android:textSize="@dimen/digital_widget_preview_label_font_size" />
    </LinearLayout>
</LinearLayout>